<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_c"
    android:orientation="vertical"
    tools:context="com.fb.sdclibrary.activity.PickerActivity">

    <TextView
        android:id="@+id/tv_track_list_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape_ar_10_f"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_expand"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_16"
        tools:text="2018-08"/>

    <TextView
        android:id="@+id/tv_track_list_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape_ar_10_f"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/icon_expand"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/color_3"
        android:textSize="@dimen/text_size_16"
        tools:text="2018-08"/>

</LinearLayout>
